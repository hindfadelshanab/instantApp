<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<View
    android:id="@+id/vieww"
    android:layout_width="100dp"
    android:layout_height="140dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"
    android:background="@drawable/green_left_bar_background"
    app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:id="@+id/txtOrderStats"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:background="@drawable/add_background"
        android:backgroundTint="@color/white"
        android:shadowRadius="12"
        tools:text="ready"

        android:paddingTop="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/layout"
        app:layout_constraintStart_toStartOf="@id/layout"
        app:layout_constraintTop_toTopOf="@id/layout"
        app:layout_constraintBottom_toBottomOf="@id/layout"

        />


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/order_details_background"


        android:elevation="4dp"
        app:layout_constraintStart_toEndOf="@id/vieww"
        app:layout_constraintStart_toStartOf="@id/vieww"
        app:layout_constraintTop_toTopOf="@id/vieww"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@id/vieww"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtOrderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text ="order"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:textSize="26sp"
            android:textColor="@color/black"

            />

    </LinearLayout>


